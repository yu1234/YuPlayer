<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_light_black">

    <com.yu.ijkplayer.view.playerView.IjkVideoView
        android:id="@+id/ijk_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.yu.ijkplayer.view.controller.IjkPlayerControllerTop
        android:id="@+id/ijk_player_controller_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="visible" />

    <com.yu.ijkplayer.view.controller.IjkPlayerControllerCenter
        android:id="@+id/ijk_player_controller_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

    <com.yu.ijkplayer.view.controller.IjkPlayerControllerBottom
        android:id="@+id/ijk_player_controller_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="visible" />
</FrameLayout>